<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <!-- Brand Tabs -->
    <Style x:Key="BrandTab" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border CornerRadius="6"
                            Background="{TemplateBinding Background}"
                            Padding="15,8">
                        <ContentPresenter HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Foreground" Value="#d1d5db"/>
        <Setter Property="Background" Value="#2563eb"/>

        <Style.Triggers>
            <Trigger Property="IsChecked" Value="False">
                <Setter Property="Background" Value="#1e40af"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Sub Tabs -->
    <Style x:Key="SubTab" TargetType="RadioButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="#4a5160" Padding="10,5">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#d1d5db"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#2563eb"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- General Buttons -->
    <Style TargetType="Button" x:Key="TopButton">
        <Setter Property="Background" Value="#4a5160"/>
        <Setter Property="Foreground" Value="#d1d5db"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="Button" x:Key="FooterButton">
        <Setter Property="Background" Value="#4a5160"/>
        <Setter Property="Foreground" Value="#d1d5db"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" x:Key="StopButton">
        <Setter Property="Background" Value="#ef4444"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,7"/>
    </Style>

</ResourceDictionary>
